#include<stdio.h>
int main()
{
    int i, number;
    printf("Enter a number: ");
    scanf("%d", &number);

    // loop to check number is perfect square or not
    for(i = 0; i <= number; i++)
    {
        if(number == i*i)
        {
            printf("%d is a perfect square\n\n\n", number);
            return 0;  
        }
    }
    printf("%d is not a perfect square\n", number);
    return 0;
}
